@model CRUD.Model.Categoria

@{
    ViewBag.Title = "Index";

    var categorias = ViewBag.Categorias as List<CRUD.Model.Categoria>;
}

<div class="row form-group">
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Categoria", FormMethod.Post))
        {
            <div class="form-group">
                <label for="email">Description:</label>
                @Html.TextBoxFor(x => x.Descricao, new { Class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        }
    </div>
</div>

@if (categorias != null && categorias.Count > 0)
{
<div class="row">
    <div class="col-md-4">
        <table class="table table-hover table-bordered">
            <tr>
                <th>Descrição</th>
            </tr>
            @foreach (var item in categorias)
            {
                <tr>
                    <td>@item.Descricao</td>
                    <td>
                        @Html.ActionLink("Alterar","Alterar", "Categoria", new { @id = item.Id },null)
                        @Html.ActionLink("Excluir", "Excluir", "Categoria", new { @id = item.Id }, null)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
}
