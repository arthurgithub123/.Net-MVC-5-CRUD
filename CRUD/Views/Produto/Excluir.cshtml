@model CRUD.Model.Produto

@{
    ViewBag.Title = "Excluir";
}

<div class="row form-group">
    <div class="col-md-4">
        @using (Html.BeginForm("Excluir", "Produto", FormMethod.Post))
        {
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(x => x.Descricao, new { Class = "form-control", Disabled = true })
            </div>
            <div class="form-group">
                <label>Category</label>

                <select class="form-control" disabled>
                    <option value="">@ViewBag.Categoria</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Cancel", "Index", "Produto", null, new { Class = "btn btn-danger" })
        }
    </div>
</div>
