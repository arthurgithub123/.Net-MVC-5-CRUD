@model CRUD.Model.Categoria

@{
    ViewBag.Title = "Excluir";
}

<div class="row form-group">
    <div class="col-md-4">
        @using (Html.BeginForm("Excluir", "Categoria", FormMethod.Post))
        {
            <div class="form-group">
                <label for="email">Description:</label>
                @Html.TextBoxFor(x => x.Descricao, new { Class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Cancel", "Index", "Categoria", null, new { Class = "btn btn-danger" })
        }
    </div>
</div>
